<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br/>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
          <lable for="title" class="form-lablel"> Title</lable>
          <input type="text" name="listing[title]" placeholder="Add a Title" class="form-control"/>
        </div>
      
    <div class="mb-3"> 
        <lable for="description" class="form-lablel"> Description</lable>
    <textarea name="listing[description]" 
    class="form-control"
    ></textarea>
    </div>
    
        <div class="mb-3">
             <lable for="image" class="form-lablel"> image</lable>
           <input name="listing[image]"
            placeholder="enter image URL/LINK"
            type="text"
            class="form-control">
        </div>

        <div class="row" >
              <div class="mb-3 col-md-4">
           <lable for="price" class="form-lablel"> Price</lable>
           <input type="number"
            name="listing[price]" 
            placeholder=12000 class="form-control"/>
             
        </div>

         <div class="mb-3 col-md-8" >
            <lable for="country" class="form-lablel"> Country</lable>
            <input type="text" name="listing[country]" placeholder="Country" class="form-control">
        </div>
        </div>
       
       
        
        <div class="mb-3">
            <lable for="location" class="form-lablel"> Location</lable>
             <input type="text"
              name="listing[location]"
               placeholder="Location" class="form-control"/>
        </div>
       
       
        
        <br/><br/>
        <button class="btn btn-dark add-btn">Create Listing</button>
        <br><br/>
    </form>
</div>
</div>